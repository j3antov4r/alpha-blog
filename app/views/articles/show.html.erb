<h2 align="center">Titulo: <%= @article.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
	<% if @article.user 
				myUser = @article.user 
	%> 
				<ul class="listing">
					<div class="row center">
						<div class="col-md-4 col-md-offset-4">
							<li>Created by:</li>
							<li><%= link_to gravatar_for(myUser), user_path(myUser)  %></li>
							<li class="article-title">
								<%=link_to myUser.username, user_path(myUser)   %>
							</li>
							<li>
								<small>
									<%= pluralize(myUser.articles.count, "article") if myUser.articles%>
									</small>
							</li>
						</div>
					</div>
				</ul>
	<% end %>
	<h4 class="center description"><strong>Description:</strong></h4>
	<hr>
	<%= simple_format(@article.description) %>
	<div class="article-actions">
		<% if logged_in? && current_user == @article.user%>
			<%= link_to "Edit this article", edit_article_path(@article), class: "btn btn-xs btn-primary" %> | 
			<%= link_to "Delete this article", article_path(@article), 
																				method: :delete, 
																				data: {confirm: "Are you sure you want to delete ths article?" }, 
																				 class: "btn btn-xs btn-danger" %>
		<% end %>
	  <%= link_to "Back to list", articles_path, class: "btn btn-xs btn-success"%>
	</div>
	
</div>


